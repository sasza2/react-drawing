{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "es2019", "DOM"
    ],
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "paths": {
      "*": [
        "node_modules/*",
        "src/*",
        "types/*"
      ]
    },
    "rootDirs": [ "src", "types" ],
    "target": "es5",
  },
}
